class Solution:
    def countComponents(self, n: int, edges: List[List[int]]) -> int:
        par = [i for i in range(n)]
        rank = [1] * n
        
        def find(node):
            while node != par[node]:
                node = par[node]
            return node
        
        def union(a, n):
            p1, p2 = find(a), find(n)
            
            if p1 == p2:
                return 0
            
            if rank[p2] > rank[p1]:
                par[p1] = p2
                rank[p2] += rank[p1]
            else:
                par[p2] = p1
                rank[p1] += rank[p2]
                
            return 1
        
        
        res = n
        
        for a,b in edges:
            res -= union(a,b)
            
        return res
            
